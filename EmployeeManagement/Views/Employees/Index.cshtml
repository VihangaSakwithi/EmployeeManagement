@model List<EmployeeManagement.Models.Domain.Employee>
@{
}

<h3>View of Employees</h3>
<table class="table mt-5">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Email</th>
			<th>Salary</th>
			<th>Birth</th>
			<th>Department</th>
			<th>Action</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var employee in Model)
		{
		<tr>
			<td>@employee.Id</td>
			<td>@employee.Name</td>
			<td>@employee.Email</td>
			<td>@employee.Salary</td>
			<td>@employee.DateOfBirth.ToString("dd-mm-yyyy")</td>
			<td>@employee.Department</td>
				<td>
					<a href="Employees/View/@employee.Id" style="color:dimgray">Edit | </a>
					<a style=" color:red" asp-controller="Employees"
					asp-action="Delete">Delete</a>
				</td>
		</tr>
		}
	</tbody>
</table>